{% extends "@backend/theme/layout-full.html.twig" %}
{% block body %}
  <div class="user-page" style="background-image: url('{{ asset('build/backend/images/authentication.jpg') }}')">
    <div class="container">
      <div class="row user-page-row">
        <div class="col-4 card">
          <div class="card-body">
            <form method="post">
              {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
              {% endif %}
              {% if app.user %}
                <div class="mb-3">
                  You are logged in as {{ app.user.username }}, <a href="{{ path('backend_security_logout') }}">Logout</a>
                </div>
              {% endif %}
              <h3 class="mb-3">Please sign in</h3>
              <div class="mb-3">
                <label for="inputUsername">Username</label>
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
              </div>
              <div class="mb-3">
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
              </div>
              <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" >
              {#
              Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
              See https://symfony.com/doc/current/security/remember_me.html
              <div class="checkbox mb-3">
                  <label>
                      <input type="checkbox" name="_remember_me"> Remember me
                  </label>
              </div>
              #}
              <button class="btn" type="submit"> Sign in </button>
            </form>
            {#<a href="{{ path('backend_security_register') }}" class="mt-3">Or Register</a>#}
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

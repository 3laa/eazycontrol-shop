{% extends "@backend/theme/layout-full.html.twig" %}
{% block body %}
  <div class="user-page" style="background-image: url('{{ asset('build/backend/images/authentication.jpg') }}')">
    <div class="container">
      <div class="row user-page-row">
        <div class="col-4 card">
          <div class="card-body">
            <h3 class="mb-3">Register</h3>
            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.username) }}
            {{ form_row(registrationForm.plainPassword, {label: 'Password'}) }}
            {{ form_row(registrationForm.agreeTerms) }}
            <button type="submit" class="btn">Register</button>
            {{ form_end(registrationForm) }}
            <a href="{{ path('backend_security_login') }}" class="mt-3">Or Login</a>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% extends "@backend/theme/layout-base.html.twig" %}
{% block body %}
  <div class="content-bar">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item">All Categories</li>
      </ol>
    </nav>
    <a href="{{ path('backend_category_new') }}" class="btn">Add New Category</a>
  </div>
  <div class="content-wrapper">
    <div class="row cards">
      {% for key, category in categories %}
      <div class="col-3 mb-3">
        <div class="card">
          <div class="card-header">
            <a href="#" class="header-title h5">{{ category.name }}</a>
            <div class="card-options">
              <a href="{{ path('backend_category_edit', {id: category.id}) }}" class="option">
                <i class="fas fa-pencil-alt"></i>
              </a>
              <a href="{{ path('backend_category_delete', {id: category.id}) }}" data-swal="Are you sure?" class="option">
                <i class="far fa-trash-alt"></i>
              </a>
            </div>
          </div>
          <div class="card-icon">
            <img src="{{ category.media['image'] }}">
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}
